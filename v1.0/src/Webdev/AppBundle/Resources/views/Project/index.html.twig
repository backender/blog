{% extends 'WebdevAppBundle::admin.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
	
{% block content %}

{{ parent() }}

<h1>Project list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Starts_at</th>
            <th>Ends_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{% if entity.startsat %}{{ entity.startsat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.endsat %}{{ entity.endsat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_project_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_project_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_project_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
	
{% endblock %}