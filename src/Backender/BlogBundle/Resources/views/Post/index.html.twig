{% extends 'BackenderBlogBundle::layout.html.twig' %}

{% block content %}

    <div id="coreContent" class="hfeed">

    {% if posts %}

        {% for post in posts %}

            <div class="post hentry">
                <h5 class="postDate"><abbr class="published">post.date</abbr></h5>
                <div class="postContent">
                    <h3 class="entry-title"><a href="<?php the_permalink() ?>" rel="bookmark">{{ post.title }}</a></h3>
                    <!-- <h4 class="vcard author">by <span class="fn"><?php the_author(); ?></span></h4> -->

                    <div class="entry-content">

                        {{ post.content|markdown }}

                    </div>
                </div>
                <div class="postMeta">
                    <div class="comments closed">
                        <div class="comments">
                            <a href="{{ path('blog_post_view', {'slug': post.slug}) }}">leave a comment</a>
                        </div>
                    </div>
                </div>

            </div>

        {% endfor %}

    {% else %}

        <h2>Not Found</h2>
        <p>Sorry, but you are looking for something that isn't here.</p>

    {% endif %}

            <div class="pageNav">
                <div class="prev"><?php next_posts_link('&laquo; Older') ?></div>
                <div class="next"><?php previous_posts_link('Newer &raquo;') ?></div>
            </div>


    </div>

{% endblock %}

