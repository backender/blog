{% block stylesheets %}
	
	{% stylesheets
		'@WebdevBlogBundle/Resources/public/css/Sidebar/tagcloud.css'
		output='resources/compiled/view.css'
	%}
			
		<link href="{{ asset_url }}" rel="stylesheet" type="text/css">
			
	{% endstylesheets %}

{% endblock %}


<ul class="rightbar_ul">
	<li class="rightbar_capter box_black box_medium" style="margin-top: 0 !important;"><h3>Tags</h3></li>
	<li style="padding-top:5px;">	
	{% for tag in tags %}
		<a style="font-size: {{ (tag.posts | length + tag.quantifier) / 5 + 1 }}em; padding-right:5px;" href="{{ path('blog_search_tag', { 'name': tag.name }) }}">{{ tag.name }}</a>
	{% else %}
		Keine Tags vorhanden
	{% endfor %}
	</li>
</ul>