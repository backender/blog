{% extends 'WebdevAppBundle::admin.html.twig' %}

{% block title %}Blogroll{% endblock %}

{% block body %}
	
{% block content %}

{{ parent() }}

<h1>Blogroll</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ entity.url }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_blogroll') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_blogroll_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_blogroll_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
	
{% endblock %}